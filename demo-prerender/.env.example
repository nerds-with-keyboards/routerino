# Prerender Configuration
# Copy this file to .env and customize for your deployment

# Comma-separated list of allowed domains (leave empty to allow all)
ALLOWED_DOMAINS=localhost,routerino.dev,*.routerino.dev

# User agents to prerender for ('all' or regex pattern)
# 'all' is recommended for best performance
PRERENDER_USER_AGENTS=all

# User agents to strip JavaScript for ('none' or regex pattern)
# Default strips JS only for search engines (recommended)
STRIP_JS_USER_AGENTS=googlebot|bingbot|yandex|baiduspider|duckduckbot

# Cache TTL in seconds (0 to disable)
# 3600 = 1 hour, 86400 = 24 hours
CACHE_MAXAGE=3600

# Port configuration
PORT=3000
HOST=0.0.0.0

# Enable request logging
LOG_REQUESTS=true

# Wait time in milliseconds after last request
WAIT_AFTER_LAST_REQUEST=500

# Follow redirects
FOLLOW_REDIRECTS=true